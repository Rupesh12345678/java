import java.util.Scanner;
public class Marksheet {
    public static void main(String[] args) {
        float percentage;
        float sum1;
        float sum2;
        System.out.println("The Marksheet of Student 1");
        Scanner sc= new Scanner(System.in);
      System.out.println("Mathmatics");
        int math= sc.nextInt();
        System.out.println("English");
        int English = sc.nextInt();
        System.out.println("Hindi");
        int Hindi = sc.nextInt();
        System.out.println("Science");
        int Science = sc.nextInt();
        System.out.println("Social Science");
        int Social = sc.nextInt();
        int sum= math+English+Hindi+Science+Social;
       System.out.println("The sum of all subject");
        System.out.println(sum);

        System.out.println("Total Marks");
sum2=sc.nextFloat();

        percentage = (float) ((sum2/500)*100);
        System.out.println("Percentage" + percentage);
    }
}

